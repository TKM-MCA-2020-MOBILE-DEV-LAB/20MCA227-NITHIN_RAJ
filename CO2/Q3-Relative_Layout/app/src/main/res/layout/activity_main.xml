<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        app:srcCompat="@drawable/fb" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="191dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="3dp"
        app:srcCompat="@drawable/spidey" />

    <TextView
        android:id="@+id/editText1"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageView9"
        android:layout_alignBottom="@id/imageView9"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="163dp"
        android:layout_marginBottom="-76dp"
        android:layout_toRightOf="@id/imageView9"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:inputType="textPersonName"
        android:text="Spider-Man"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="217dp"
        android:layout_height="26dp"
        android:layout_above="@+id/textView3"
        android:layout_alignTop="@+id/check1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="49dp"
        android:text="Find your account" />

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="217dp"
        android:layout_height="26dp"
        android:layout_below="@id/imageView9"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="56dp"
        android:text="Log in to another account" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="41dp"
        android:text="Create new Facebook account"
        android:textSize="20sp" />

</RelativeLayout>